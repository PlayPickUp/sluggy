{
  "include": ["src/**/*"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "ESNext", "ES2019"],
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declarationMap": true
  },
  "exclude": ["node_modules", "build", "dist", "src/**/*.test.ts"]
}
